# Specify the hostname, the ip address, and the cpu count.
# The hostname can be anything, they just have to unique for each host.

# Always have this section
[master]
master.lan ansible_ssh_host=192.168.72.99 cpu_count=2

[slaves]
slave1.lan ansible_ssh_host=192.168.72.1 cpu_count=4
slave2.lan ansible_ssh_host=192.168.72.2 cpu_count=4
slave3.lan ansible_ssh_host=192.168.72.3 cpu_count=4
